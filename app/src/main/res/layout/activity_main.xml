<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextText_AdiSoyadi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="195dp"
        android:layout_marginBottom="23dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Adı Soyadı"
        app:layout_constraintBottom_toTopOf="@+id/editTextText_Email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextText_Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="E-Mail"
        app:layout_constraintBottom_toTopOf="@+id/editText_Telefon"
        app:layout_constraintStart_toStartOf="@+id/editTextText_AdiSoyadi"
        app:layout_constraintTop_toBottomOf="@+id/editTextText_AdiSoyadi" />

    <EditText
        android:id="@+id/editText_Telefon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="62dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Telefon"
        app:layout_constraintBottom_toTopOf="@+id/button_Onayla"
        app:layout_constraintStart_toStartOf="@+id/editTextText_Email"
        app:layout_constraintTop_toBottomOf="@+id/editTextText_Email" />

    <Button
        android:id="@+id/button_Onayla"
        android:layout_width="254dp"
        android:layout_height="0dp"
        android:layout_marginBottom="240dp"
        android:onClick="digerActivity"
        android:text="ONAYLA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_Telefon" />

</androidx.constraintlayout.widget.ConstraintLayout>